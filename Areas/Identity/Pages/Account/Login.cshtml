@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh; /* Ensures it fills full screen even if content is taller */
    }

    body {
        background: url('https://cache2.24chasa.bg/Images/Cache/116/IMAGE_16970116_40_0.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>


<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-4">
        <div class="card shadow-lg rounded">
            <div class="card-body">
                <form id="account" method="post">
                    <h2 class="text-center mb-4">Log in</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>

                    <div class="mt-3 text-center">
                        <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
