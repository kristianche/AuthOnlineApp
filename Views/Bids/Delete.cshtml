@using AuthOnlineApp.Data
@model Bid

@{
    ViewData["Title"] = "Delete";
}

<!-- Page Styling -->
<style>
    body {
        background: #f0f2f5; /* Light gray background */
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40; /* Dark gray color for the title */
        font-size: 36px;
        font-weight: 700;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

    h3 {
        color: #dc3545; /* Red color for the confirmation text */
        font-size: 24px;
        font-weight: 600;
        text-align: center;
    }

    h4 {
        color: #007bff; /* Blue color for section titles */
        font-size: 24px;
        font-weight: 600;
        margin-top: 30px;
    }

    dl.row {
        background-color: #ffffff; /* White background for the details */
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    dt {
        font-weight: 600;
        color: #343a40;
    }

    dd {
        color: #6c757d; /* Lighter gray for details */
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-back {
        color: #007bff;
        text-decoration: none;
        font-size: 16px;
        margin-left: 10px;
    }

        .btn-back:hover {
            text-decoration: underline;
        }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
</style>

<!-- Main content -->
<div class="container">
    <h1>Delete Bid</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Bid Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BidId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn-back">Back to My Bids</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
