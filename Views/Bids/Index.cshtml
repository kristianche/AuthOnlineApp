@using AuthOnlineApp.Data
@model IEnumerable<Bid>

@{
    ViewData["Title"] = "My Bids";
}

<!-- Page Styling -->
<style>
    body {
        background: #f0f2f5; /* Light gray background */
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40; /* Dark gray color for the title */
        font-size: 36px;
        font-weight: 700;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

    .card {
        border: none; /* Remove the default card border */
        border-radius: 15px; /* Rounded corners for the card */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover effect */
    }

        .card:hover {
            transform: translateY(-5px); /* Slightly lift the card on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* More pronounced shadow */
        }

    .card-body {
        background-color: #ffffff; /* White background for card body */
        padding: 20px;
        color: #343a40; /* Dark gray text */
    }

    .card-title {
        font-size: 24px;
        font-weight: 600;
        color: #007bff; /* Blue color for card title */
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 16px;
        color: #6c757d; /* Lighter gray text for body */
        margin-bottom: 10px;
    }

    .card-footer {
        background-color: #f8f9fa; /* Light background for footer */
        border-top: 1px solid #ddd;
        text-align: center;
        padding: 10px 0;
    }

    .btn {
        font-size: 14px;
        padding: 8px 15px;
        margin: 5px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .btn-sm {
        font-size: 12px; /* Smaller button font size */
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .create-btn-container {
        text-align: center;
        margin-bottom: 30px;
    }
</style>

<!-- Main content -->
<div class="container">
    <h1>My Bids</h1>

    

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Bid Amount: @Html.DisplayFor(modelItem => item.Amount)</h5>
                        <p class="card-text"><strong>Created At:</strong> @Html.DisplayFor(modelItem => item.CreatedAt)</p>
                        <p class="card-text"><strong>Product:</strong> @Html.DisplayFor(modelItem => item.Product.Name)</p>
                        <p class="card-text"><strong>User:</strong> @Html.DisplayFor(modelItem => item.User.UserName)</p>
                    </div>
                    <div class="card-footer text-muted">
                        <a asp-action="Edit" asp-route-id="@item.BidId" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BidId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BidId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
