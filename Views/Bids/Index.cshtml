@using AuthOnlineApp.Data
@model IEnumerable<Bid>

@{
    ViewData["Title"] = "Index";
}

<h1>My Bids</h1>

<p>
    <a asp-action="Create">Create New Bid</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BidId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BidId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BidId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
